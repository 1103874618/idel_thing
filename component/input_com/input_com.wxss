/* component/input_com/input_com.wxss */
.container_com{
  display: flex;
  flex-direction: row;
  background-color: #ffb400;
  width:100%;
  height:150rpx;
  justify-content:space-around;
  align-items: center;
  flex-wrap: nowrap;
}
.logo{
  display: inline-block;
  margin-top: 16rpx;
  width: 100rpx;
}
.search_bar{
  position: relative;
  padding: 0 50rpx;
  display: inline-block;
  border-radius: 36rpx;
  margin-right: 188rpx;
  margin-top: 16rpx;
  background: white ;
  
  background-repeat: no-repeat;
  background-position:-10rpx 14rpx;
  background-size: 40rpx 40rpx;
  background-origin: content-box;
  
  width: 300rpx;
  height: 64rpx;
}
.search_bar_ico_show{
  background-image: url("https://ws1.sinaimg.cn/large/9448bbf8gy1fwym5cyaddj201i01i3yb.jpg") ;
}
.search_ico_unshow{
  background-image: none;
}

.clearImgShow{
  display:inline-block;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 50rpx;
  top: 8rpx;
  z-index: 10;
}
.clearImgHide{
  display: none;
}